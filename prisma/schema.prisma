datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id    Int     @id @default(autoincrement())
  text  String
  done  Boolean @default(false)
  user  User?   @relation(fields: [userId], references: [id])
  userId Int?
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  todos Todo[]
}